---
import Layout from "../layouts/Layout.astro";
import TargetaCarro from "../components/TargetaCarro.astro";
---
<!-- pagina para mostrar los prodcutos del carrito -->
<Layout>
    <section class="carro">
        <div class="carrito">
            <h1 class="cesta">CESTA</h1><hr>
            <div class="productos">
            
                <TargetaCarro img="https://entresemillas.com/1993-home_default/manzanilla-romana-sobre-100-semillas.jpg" nombre="Manzanilla romana - 400 semillas" precio="2,35 €" />
                <TargetaCarro img="https://entresemillas.com/2137-home_default/echinocactus-grusonii-semillas.jpg" nombre="Echinocactus grusonii - 8 semillas" precio="2,49 €" />
                <TargetaCarro img="https://entresemillas.com/2286-home_default/pimiento-verde-italiano-semillas.jpg" nombre="Pimiento Verde Italiano - 20 semillas" precio="1,99 €" />

        </div>  

        </div>
       

        <div class="pago">
            <p class="mt">3 artículos (6,83 €)</p><hr>
            <p class="mt">Total (impuestos inc.) 7,1 €</p>
            <div class="boton">
                <a href="/" class="bn11 mt">Tramitar pedido</a>
            </div>
        </div>

    </section>
</Layout>

<style>
    * {
        text-decoration: none;
    }
    .ri-delete-bin-7-fill {
        cursor: pointer;
    }
    .bn11 {
        display: inline-block;
        padding: 10px 20px;
     background-color: #668A4C;
  border-radius: 2em;
  box-sizing: border-box;
  font-weight: 300;
  color: #ffffff;
  text-shadow: 0 0.04em 0.04em rgba(0, 0, 0, 0.35);
  text-align: center;
    }
    .mt {
        margin-top: 10px;
    }
    .borrar {
        display: flex;
        justify-content: end;
        align-items: center;
        width: 30%;
        margin-right: 20px;
        height: 100px;
        font-size: 20px;
    }
  
 
    .cesta {
        text-align: center;
    }
    .carrito {
        height: 80vh;
        width: 40%;
        background-color: white;
        overflow: scroll;
    }
    .productos {
        background-color: white;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
    }
   
    .pago {
        background-color: white;
        height: 80vh;
        width: 20%;
    }
    .carro {
        min-height: 80vh;
        width: 100%;
        background: url("https://entresemillas.com/img/madera1.jpg"); 
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        
    }
    .pago {
        text-align: center;
    }
      
	@media (max-width: 768px){
        .carro {
            flex-direction: column;
        }
        .semillas {
            display: flex;
            height: auto;
            width: 100%;
            flex-direction: column;

        
        }
        .carrito {
            width: 90%;
        }
        .pago {
            margin-top: 10px;
            width: 90%;
        }

